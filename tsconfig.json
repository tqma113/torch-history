{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": false,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": [ "esnext", "dom" ],
    "types": [
      "jest",
      "node"
    ],
    "rootDir": "."
  },
  "include": [
    "src",
    "__tests__"
  ]
}